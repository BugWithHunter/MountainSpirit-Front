<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bughunters.mountainspirit.postcomment.query.mapper.CommentGetMapper">
    <resultMap id="getCommentMap" type="com.bughunters.mountainspirit.postcomment.query.dto.CommentDTO">
        <id property="id" column="ID"/>
        <result property="content" column="CONTENT"/>
        <result property="createDate" column="CREATEDATE"/>
        <result property="modifyDate" column="MODIFYDATE"/>
        <result property="cumId" column="CUMID"/>
    </resultMap>
    <select id="selectCommentByPostId" resultMap="getCommentMap" parameterType="_int">
        SELECT
               A.ID
             , A.CONTENT
             , A.CREATEDATE
             , A.MODIFYDATE
             , A.CUMID
          FROM Comment A
         WHERE (A.POSTID = #{id}) OR (A.NOTICEPOSTID = #{id}) OR (A.CREWPOSTID = #{id})
    </select>
</mapper>